                            <div class="product_count">
                                <label for="qty">Quantity:</label>
                                <input type="number" name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty" min="1" max="${detail.quantity}">
                                <button onclick="increaseQuantity()" class="increase items-count" type="button"><i class="lnr lnr-chevron-up"></i></button>
                                <button onclick="decreaseQuantity()" class "reduced items-count" type="button"><i class="lnr lnr-chevron-down"></i></button>
                            </div>
                            <script>
                                var result = document.getElementById('sst');
                                var quantity = 1; // Khởi tạo quantity với giá trị ban đầu là 1

                                function increaseQuantity() {
                                    var sst = parseInt(result.value);

                                    if (!isNaN(sst) && sst < parseInt(result.getAttribute('max'))) {
                                        result.value = sst + 1;
                                        quantity = sst + 1; // Cập nhật giá trị quantity
                                    }
                                }

                                function decreaseQuantity() {
                                    var sst = parseInt(result.value);

                                    if (!isNaN(sst) && sst > 1) {
                                        result.value = sst - 1;
                                        quantity = sst - 1; // Cập nhật giá trị quantity
                                    }
                                }

                                function addToCart() {
                                    var productID = document.getElementById('productID');
                                    var username = document.getElementById('username');
                                    var quantityField = document.getElementById('quantity');
                                    var priceField = document.getElementById('price');

                                    var selectedQuantity = parseInt(result.value);

                                    if (!isNaN(selectedQuantity) && selectedQuantity >= 1) {
                                        // Cập nhật giá trị trường ẩn "price"
                                        priceField.value = (parseFloat(result.getAttribute('max')) * 1.5).toFixed(2);

                                        // Cập nhật giá trị trường ẩn "quantity"
                                        quantityField.value = selectedQuantity;

                                        // Submit the form to the servlet
                                        document.getElementById('addToCartForm').submit();
                                    }
                                }
                            </script>
                            <div class="card_area d-flex align-items-center">
                                <button class="primary-btn" onclick="addToCart()">Add to Cart</button>
                                <a class="icon_btn" href="#"><i class="lnr lnr-diamond"></i></a>
                                <a class="icon_btn" href="#"><i class="lnr lnr-heart"></i></a>
                            </div>
